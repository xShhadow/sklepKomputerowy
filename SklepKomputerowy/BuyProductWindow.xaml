<Window x:Class="SklepKomputerowy.BuyProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SklepKomputerowy"
        mc:Ignorable="d"
        Title="BuyProductWindow" Height="300" Width="500">
    <Grid>
        <Label Content="Wybierz produkt" Grid.Row="0" FontSize="35" HorizontalAlignment="Center" Margin="0,23,0,121"/>
        <ComboBox x:Name="ProductComboBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="194" Height="30" FontSize="15" Margin="0,113,0,0"/>
        <StackPanel HorizontalAlignment="Center"  VerticalAlignment="Top"  Margin="0,170,0,0">
            <Button Content="Potwierdź" Click="BuyButton_Click" FontSize="15" Height="28" Width="104" Background="#10BD38" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
        
    </Grid>
</Window>
